{
  "compilerOptions": {
    "target": "es2020", 
    "experimentalDecorators": true, 
    "module": "commonjs", 
    "paths": {
      "@modules/*":["./src/modules/*"],
      "@shared/*":["./src/shared/*"]
    },                                      
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true
  }
}